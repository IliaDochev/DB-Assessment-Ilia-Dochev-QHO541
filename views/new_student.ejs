<!--include header-->
<%- include('include/_header')%>
<!--/include header-->

    <!--Main Site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>
                        Back
                    </a>
                </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">New Student</h2>
                <span class="text-light">Use the below form to add a new student</span>
            </div>
        <!--form handling-->
        <form action="/api/students" method="POST" id="new_student">
            <div class="new_student">
                <div class="form-group">
                    <label for="name" class="text-light">First and Last name</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="name" value="" placeholder="Type name here">
                </div>
                <div class="form-group">
                    <label for="email" class="text-light">Email</label>
                    <input type="text" name="email" value="" placeholder="example@example.com">
                </div>
                <div class="form-group">
                    <label for="gender" class="text-light">Gender</label>
                    <div class="radio inline">

                        <input type="radio" name=gender" value="Male">
                        <label for="gender" class="text-light">Male</label>

                        <input type="radio" name=gender" value="Female">
                        <label for="gender" class="text-light">Female</label>

                        <input type="radio" name=gender" value="Perfer not to say">
                        <label for="gender" class="text-light">Perfer not to say</label>
                    </div>
                    
                </div>

                
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <div class="radio inline">

                        <input type="radio" name=Status" value="Active">
                        <label for="status" class="text-light">Active</label>

                        <input type="radio" name="Status" value="Inactive">
                        <label for="status" class="text-light">Inactive</label>

                    </div>
                    
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Add Student</button>
                </div>
            </div>
            
        </form>
        </div>
    </main>

<!--/Main Site-->
<!--include footer-->
<%- include('include/_footer')%>
<!--/include footer-->

